{
  "name": "koishi-plugin-chatluna-affinity",
"description": "为 ChatLuna Character 提供更多变量及工具，例如 {好感度}、{关系}、{日程}、{天气}、{用户信息}、{机器人信息}、{群信息}等变量并提供对应的工具调用和低好感自动拉黑功能。",
  "version": "0.2.3-alpha.1",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "dist",
    "client"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup && node --max-old-space-size=16384 ./node_modules/typescript/lib/tsc.js --emitDeclarationOnly --outDir lib --skipLibCheck && vite build",
    "build:server": "tsup && node --max-old-space-size=16384 ./node_modules/typescript/lib/tsc.js --emitDeclarationOnly --outDir lib --skipLibCheck",
    "build:client": "vite build",
    "build:parallel": "npm run build:server & npm run build:client; wait",
    "watch": "tsup --watch",
    "clean": "rimraf lib dist"
  },
  "keywords": [
    "chatbot",
    "koishi",
    "plugin"
  ],
  "homepage": "https://github.com/Sor85/koishi-plugin-chatluna-affinity",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sor85/koishi-plugin-chatluna-affinity.git"
  },
  "koishi": {
    "description": {
      "zh": "ChatLuna 好感度系统"
    }
  },
  "peerDependencies": {
    "koishi": "^4.18.7",
    "koishi-plugin-chatluna": "*",
    "koishi-plugin-chatluna-character": "*",
    "@koishijs/plugin-console": "^5.30.0",
    "koishi-plugin-puppeteer": "^3.0.0",
    "koishi-plugin-chatluna-group-analysis": "*"
  },
  "peerDependenciesMeta": {
    "koishi-plugin-chatluna-character": {
      "optional": true
    },
    "@koishijs/plugin-console": {
      "optional": true
    },
    "koishi-plugin-puppeteer": {
      "optional": true
    },
    "koishi-plugin-chatluna-group-analysis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@koishijs/client": "^5.30.0",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "rimraf": "^5.0.5",
    "sass": "^1.77.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@langchain/core": "^0.3.62",
    "koishi-plugin-chatluna": "*",
    "zod": "^3.23.8"
  }
}
