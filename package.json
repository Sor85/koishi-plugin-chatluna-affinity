{
  "name": "koishi-plugin-chatluna-affinity",
  "description": "为 ChatLuna Character 提供 {好感度}、{关系}、{日程} 等变量并提供对应的工具调用和低好感自动拉黑功能。",
  "version": "0.2.1-alpha.8",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "dist",
    "client"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup && node --max-old-space-size=8192 ./node_modules/typescript/lib/tsc.js --emitDeclarationOnly --outDir lib --skipLibCheck && vite build",
    "build:client": "vite build",
    "watch": "tsup --watch",
    "clean": "rimraf lib dist"
  },
  "keywords": [
    "chatbot",
    "koishi",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Sor85/koishi-plugin-chatluna-affinity.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/Sor85/koishi-plugin-chatluna-affinity/issues"
  },
  "homepage": "https://github.com/Sor85/koishi-plugin-chatluna-affinity#readme",
  "koishi": {
    "description": {
      "zh": "ChatLuna 好感度系统"
    }
  },
  "peerDependencies": {
    "@koishijs/plugin-console": "^5.30.0",
    "koishi": "^4.18.7"
  },
  "devDependencies": {
    "@koishijs/client": "^5.30.0",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "rimraf": "^5.0.5",
    "sass": "^1.77.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@langchain/core": "^0.3.62",
    "koishi-plugin-chatluna": "^1.3.0-alpha.78",
    "zod": "^3.23.8"
  }
}
